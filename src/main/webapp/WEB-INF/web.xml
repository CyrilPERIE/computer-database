<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
	<servlet>
		<servlet-name>ServletDashboard</servlet-name>
		<servlet-class>fr.excilys.cdb.servlets.ServletDashboard</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ServletDashboard</servlet-name>
		<url-pattern>/dashboard</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ServletAddComputer</servlet-name>
		<servlet-class>fr.excilys.cdb.servlets.ServletAddComputer</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ServletAddComputer</servlet-name>
		<url-pattern>/addComputer</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ServletEditComputer</servlet-name>
		<servlet-class>fr.excilys.cdb.servlets.ServletEditComputer</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>ServletEditComputer</servlet-name>
		<url-pattern>/editComputer</url-pattern>
	</servlet-mapping>
		
</web-app>